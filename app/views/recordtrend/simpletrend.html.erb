<h1>Trend Analysis</h1>
<div class="trendAnalysisChart"></div>
<table id="trendAnalysisPrimary" class="table table-striped table-bordered dataTable table-hover table-highlight table-checkable table-sparkline">
  <thead>
  <tr>
    <th style="width: 250px">Column Name</th>
    <th style="width: 250px">Type</th>
    <th>Count</th>
    <th>Min</th>
    <th>Max</th>
    <th>Result</th>
  </tr>
  </thead>
    <tbody id="tbody-sparkline">
      <% if @tableRecord.size > 0 then %>
          <% @tableRecord.each do |recordAnalysis| %>
              <tr>
                <td><%= recordAnalysis[:columnname] %></td>
                <td><%= recordAnalysis[:type] %></td>
                <td><%= recordAnalysis[:count] %></td>
                <td>
                  <% if recordAnalysis[:min] == 0 then %>
                    -
                  <% else %>
                      <% if recordAnalysis[:type] == "datetime" then %>
                        <%= recordAnalysis[:min].strftime("%m/%d/%Y %H:%M:%S") %>
                      <% elsif recordAnalysis[:moneyFormat] != '' then %>
                          <%= recordAnalysis[:moneyFormat] %><%= recordAnalysis[:min] %>
                      <% else %>
                        <%= recordAnalysis[:min] %>
                      <% end %>
                  <% end %>
                </td>
                <td>
                  <% if recordAnalysis[:max] == 0 then %>
                      -
                  <% else %>
                      <% if recordAnalysis[:type] == "datetime" then %>
                          <%= recordAnalysis[:max].strftime("%m/%d/%Y %H:%M:%S") %>
                      <% elsif recordAnalysis[:moneyFormat] != '' then %>
                          <%= recordAnalysis[:moneyFormat] %><%= recordAnalysis[:max] %>
                      <% else %>
                          <%= recordAnalysis[:max] %>
                      <% end %>
                  <% end %>
                </td>
                <td data-sparkline="<%= (recordAnalysis.to_json).to_s %> ; column"></td>
              </tr>
          <% end %>
      <% end %>
    </tbody>
  </table>
<%= javascript_include_tag('datauploaders.js') %>
<%= javascript_include_tag('highChartsCalc.js') %>
